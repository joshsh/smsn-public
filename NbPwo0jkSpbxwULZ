docker pull jeffreybbrown/smsn
docker pull jeffreybbrown/smsn.2017-03-04

export IMAGE=jeffreybbrown/smsn.2017-03-04

# note: using --net instead of --network
docker run -it --name "docker-smsn" -v /tmp/neo4j-docker/:/mnt/smsn-data --net="host" $IMAGE

# stop and remove
docker stop docker-smsn
docker rm docker-smsn

# open a second terminal
docker exec -it "docker-smsn" /bin/bash