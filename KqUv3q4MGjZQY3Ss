cd ~ && wget -O - "https://www.dropbox.com/download?plat=lnx.x86" | tar xzf -
~/.dropbox-dist/dropboxd &
# now visit the displayed URL in a browser to link the account

# this is necessary before serving Dropbox-hosted content from Apache
chmod +rx ~/Dropbox