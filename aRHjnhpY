docker pull jeffreybbrown/smsn

# note: using --net instead of --network
docker run -it --name "docker-smsn" -v /tmp/neo4j-docker/:/mnt/smsn-data --net="host" jeffreybbrown/smsn

# run again with
docker stop docker-smsn
docker rm docker-smsn
docker run -it --name "docker-smsn" jeffreybbrown/smsn /bin/bash